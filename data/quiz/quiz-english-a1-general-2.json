{
  "id": "quiz-english-a1-general-2",
  "title": "A1 Grammar - General Review 2",
  "subject": "english",
  "tags": ["a1", "grammar", "mixed-tenses"],
  "description": "More practice covering Present Simple, Present Continuous, Past Simple, and Future forms.",
  "questions": [
    {
      "id": 1,
      "text": "Yesterday, I _____ late for school.",
      "options": ["am", "was", "were", "is"],
      "correctAnswer": "was",
      "explanation": "Past Simple of 'be' with 'I' is 'was'."
    },
    {
      "id": 2,
      "text": "Listen! Someone _____ singing.",
      "options": ["is", "are", "do", "does"],
      "correctAnswer": "is",
      "explanation": "Present Continuous: Happening right now."
    },
    {
      "id": 3,
      "text": "They often _____ to the park on weekends.",
      "options": ["go", "goes", "going", "went"],
      "correctAnswer": "go",
      "explanation": "Present Simple for habits/routines."
    },
    {
      "id": 4,
      "text": "Next year, I _____ travel to Spain.",
      "options": ["am", "did", "will", "do"],
      "correctAnswer": "will",
      "explanation": "Future plan/prediction uses 'will'."
    },
    {
      "id": 5,
      "text": "She _____ didn't study for the test.",
      "options": ["do", "does", "did", "—"],
      "correctAnswer": "—",
      "explanation": "Trick question (or simplified): The sentence is 'She didn't study'. The auxiliary is already there. If forced to choose an auxiliary for 'not study', it is 'did'."
    },
    {
      "id": 6,
      "text": "What _____ you doing right now?",
      "options": ["do", "did", "are", "is"],
      "correctAnswer": "are",
      "explanation": "Present Continuous question: 'What are you doing?'"
    },
    {
      "id": 7,
      "text": "My dad _____ dinner last night.",
      "options": ["cook", "cooks", "cooked", "cooking"],
      "correctAnswer": "cooked",
      "explanation": "Past Simple regular verb: cook + ed."
    },
    {
      "id": 8,
      "text": "Are you _____ to watch the movie?",
      "options": ["go", "going", "gone", "will"],
      "correctAnswer": "going",
      "explanation": "Future: 'Are you going to...' structure."
    },
    {
      "id": 9,
      "text": "The sun _____ in the east.",
      "options": ["rise", "rises", "rising", "rose"],
      "correctAnswer": "rises",
      "explanation": "Present Simple for facts."
    },
    {
      "id": 10,
      "text": "I _____ not feeling well today.",
      "options": ["do", "am", "is", "have"],
      "correctAnswer": "am",
      "explanation": "Present Continuous negative: I am not."
    },
    {
      "id": 11,
      "text": "When _____ they arrive?",
      "options": ["did", "was", "were", "are"],
      "correctAnswer": "did",
      "explanation": "Past Simple question: 'When did they arrive?' (assuming completed action)."
    },
    {
      "id": 12,
      "text": "Don't worry, he _____ fix it.",
      "options": ["will", "is", "does", "has"],
      "correctAnswer": "will",
      "explanation": "Future promise/reassurance uses 'will'."
    },
    {
      "id": 13,
      "text": "We _____ not at home yesterday.",
      "options": ["are", "were", "did", "was"],
      "correctAnswer": "were",
      "explanation": "Past Simple of 'be' (negative): We were not."
    },
    {
      "id": 14,
      "text": "Does she _____ tennis?",
      "options": ["play", "plays", "played", "playing"],
      "correctAnswer": "play",
      "explanation": "Present Simple question: 'Does' + base verb."
    },
    {
      "id": 15,
      "text": "I _____ writing an email at the moment.",
      "options": ["am", "is", "are", "do"],
      "correctAnswer": "am",
      "explanation": "Present Continuous with 'I' uses 'am'."
    },
    {
      "id": 16,
      "text": "They _____ a new car two days ago.",
      "options": ["buy", "buys", "bought", "buying"],
      "correctAnswer": "bought",
      "explanation": "Past Simple irregular verb: buy -> bought."
    },
    {
      "id": 17,
      "text": "Maybe it _____ rain later.",
      "options": ["will", "is", "did", "does"],
      "correctAnswer": "will",
      "explanation": "Future prediction with 'maybe'."
    },
    {
      "id": 18,
      "text": "What time _____ you get up usually?",
      "options": ["do", "did", "are", "will"],
      "correctAnswer": "do",
      "explanation": "Present Simple question about routine."
    },
    {
      "id": 19,
      "text": "She _____ reading a book when I saw her.",
      "options": ["is", "was", "were", "did"],
      "correctAnswer": "was",
      "explanation": "Past Continuous (Past 'be' + ing): She was reading."
    },
    {
      "id": 20,
      "text": "I _____ going to be a doctor.",
      "options": ["will", "am", "do", "have"],
      "correctAnswer": "am",
      "explanation": "Future intention: I am going to be."
    }
  ]
}