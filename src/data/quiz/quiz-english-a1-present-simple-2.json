    {
      "id": 1,
      "text": "Where _____ you live?",
      "options": ["do", "does", "are", "is"],
      "correctAnswer": "do",
      "explanation": "Wh-question with 'you' uses the auxiliary 'do'."
    },
    {
      "id": 2,
      "text": "Tom _____ English very well.",
      "options": ["study", "studies", "studys", "studying"],
      "correctAnswer": "studies",
      "explanation": "Verbs ending in consonant + y change to -ies (study -> studies)."
    },
    {
      "id": 3,
      "text": "We _____ know the answer.",
      "options": ["no", "not", "don't", "doesn't"],
      "correctAnswer": "don't",
      "explanation": "Negative form for 'We' is 'do not' (don't)."
    },
    {
      "id": 4,
      "text": "What time _____ the shop open?",
      "options": ["do", "does", "is", "are"],
      "correctAnswer": "does",
      "explanation": "'The shop' is singular (it), so we use 'does'."
    },
    {
      "id": 5,
      "text": "She _____ her face every morning.",
      "options": ["wash", "washs", "washes", "washing"],
      "correctAnswer": "washes",
      "explanation": "Verbs ending in -sh add -es (wash -> washes)."
    },
    {
      "id": 6,
      "text": "I usually _____ coffee.",
